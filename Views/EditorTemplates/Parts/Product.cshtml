@model Sapias.Commerce.Models.ProductPart

<fieldset>
    <legend>Product Fields</legend>

    <div class="editor-label">@Html.LabelFor(x => x.Sku)</div>
    <div class="editor-field">
        @Html.EditorFor(x => x.Sku)
        @Html.ValidationMessageFor(x => x.Sku)
    </div>
    <div class="hint">@T("Enter the Stock Keeping Unit")</div>

    <div class="editor-label">@Html.LabelFor(x => x.Price)</div>
    <div class="editor-field">
        @Html.EditorFor(x => x.Price)
        @Html.ValidationMessageFor(x => x.Price)
    </div>
    <div class="hint">@T("Enter the sales price per unit")</div>

    <div class="editor-label">@Html.LabelFor(x => x.Inventory)</div>
    <div class="editor-field">
        @Html.EditorFor(x => x.Inventory)
        @Html.ValidationMessageFor(x => x.Inventory)
    </div>
    <div class="hint">@T("Enter the inventory of this product")</div>

    <div class="editor-label">@Html.LabelFor(x => x.DiscountPrice)</div>
    <div class="editor-field">
        @Html.EditorFor(x => x.DiscountPrice)
        @Html.ValidationMessageFor(x => x.DiscountPrice)
    </div>
    <div class="hint">@T("Enter a discount price. Set to -1 to ignore discount.")</div>
</fieldset>